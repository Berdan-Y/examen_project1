{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            {% for product in products %}
                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                        <h5 class="card-title">{{ product.name }}</h5>
                        <p class="card-text">{{ product.description }}</p>
                        <p class="card-text">{{ product.price }}</p>
                        <a href="{{ path('app_member_product_details', {'id': product.id}) }}" class="btn btn-primary">Bekijk</a>
                    </div>
                </div>
            {% endfor %}
        </div>
        <a href="{{ path('app_member_cart') }}" class="btn btn-success mt-2">Winkelwagen</a>
    </div>
{% endblock %}