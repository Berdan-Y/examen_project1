{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col">
                <p>Categorieen</p>
            </div>
        </div>
        <div class="row">
            {% for category in categories %}
                <div class="col-4">
                    <a class="btn btn-primary" href="{{ path('app_admin_treatments', {'id': category.id}) }}">{{ category.name }}</a>
                </div>
            {% endfor %}
        </div>
        <div class="row mt-2">
            <div class="col-3">
                <a href="{{ path('app_admin_category_insert') }}" class="btn btn-success">Categorie toevoegen</a>
            </div>
        </div>
    </div>
{% endblock %}