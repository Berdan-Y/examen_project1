{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col">
                <p>Behandelingen</p>
            </div>
        </div>
        <div class="row">
            <table class="table">
                <thead>
                <tr>
                    <th scope="col">Behandeling</th>
                    <th scope="col">Prijs</th>
                    <th scope="col">Update</th>
                    <th scope="col">Delete</th>
                </tr>
                </thead>
                <tbody>
                    {% for treatment in treatments %}
                        <tr>
                            <th scope="row">{{ treatment.name }}</th>
                            <td>{{ treatment.price }}</td>
                            <td><a href="{{ path('app_admin_treatment_update', {'id': treatment.id}) }}" class="btn btn-warning">Update</a></td>
                            <td><a href="{{ path('app_admin_treatment_delete', {'id': treatment.id}) }}" class="btn btn-danger">Delete</a></td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="row mt-2">
            <div class="col-3">
                <a href="{{ path('app_admin_treatment_insert', {'id': category_id}) }}" class="btn btn-success">Behandeling toevoegen</a>
            </div>
        </div>
    </div>
{% endblock %}